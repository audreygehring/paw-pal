<div class="callout" id="non-home-pages">

  <h5 class="title-text">Sign Up</h5>

  <div class="small-10 small-centered columns">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
      </div>

      <div class="field">
        <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.text_field :favorite_animal, autofocus: true, placeholder: "Favorite Animal" %>
      </div>

      <div class="field">
        <% f.label :role %>
        <%= f.radio_button :role, "Volunteer" %> Volunteer
        <%= f.radio_button :role, "Rescue Owner" %> Rescue Owner
      </div>

      <div class="field">
        <%= f.password_field :password, label: "Password", autocomplete: "off", placeholder: "Password (Must be 6 Characters)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, label: "Password Confirmation", autocomplete: "off", placeholder: "Password Confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: "button small" %>
        <%= link_to "Sign In", new_user_session_path, class: "button small align-right" %> 
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
