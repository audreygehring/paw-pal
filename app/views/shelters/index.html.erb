<% if current_user %>
  <div class="small-3 columns left-align">
    <div class="callout" id="index-title">
      <strong>Upcoming Volunteer Sessions</strong>
    </div>
    <% @upcoming_volunteer_sessions.each do |upcoming_volunteer_sessions| %>
    <% if current_user == upcoming_volunteer_sessions.user %>
      <% shelter = Shelter.find(upcoming_volunteer_sessions.shelter_id) %>
        <div class="callout" id="index-callout">
          <strong><%= link_to shelter.name, shelter_path(shelter), id: "inverse-link" %></strong><br>
          <% date = DateTime.parse(upcoming_volunteer_sessions.date) %>
          When: <%= date.strftime("%a, %B %d") %> from <%= upcoming_volunteer_sessions.time %>        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>

<% end %>
